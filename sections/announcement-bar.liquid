<div class="bg-green-800 w-full">
  <div
    class="h-10x container py-[2px] space-x-4x l:py-1x px-4x m:px-6x l:px-10x flex justify-between items-center w-full"
    data-section-id="{{ section.id }}"
    data-section-type="announcement-bar"
    role="banner"
    aria-label="{{ 'sections.announcements.announcement_bar' | t }}"
  >
    {% comment %}
      no b2b for MVP
      <div class="flex gap-2x flex-none w-[184px]">
        <a
          href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
          rel="noopener"
          class="link-primary link-small text-content-primary-inverse flex-none hover:opacity-80 transition-opacity duration-200 {% if customer.b2b? -%} underline {%- endif -%}"
          id="account-icon"
        >
          {{ 'sections.announcements.business_site_link' | t }}
        </a>

        <a
          href="{{ routes.root_url }}"
          rel="noopener"
          class="link-primary link-small text-content-primary-inverse flex-none hover:opacity-80 transition-opacity duration-200 {% unless customer.b2b? -%} underline {%- endunless -%}"
        >
          {{ 'sections.announcements.consumer_site_link' | t }}
        </a>
      </div>
    {% endcomment %}

    <div class="h-full w-full order-first">
      {% if section.blocks.size > 0 %}
        {% render 'block.announcement-slideshow',
          blocks: section.blocks,
          change_speed: section.settings.change_slides_speed
        %}
      {% endif %}
    </div>

    <div class="flex items-center gap-2x flex-none order-last min-h-24">
      {%- render 'block.localization-flag' -%}
      {%- render 'block.localization-button', theme: 'dark' -%}
    </div>
  </div>
</div>
<div class="bg-green-800 w-full">
  <div
    class="h-10x container py-[2px] space-x-4x l:py-1x px-4x m:px-6x l:px-10x flex justify-between items-center w-full"
